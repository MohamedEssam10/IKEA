@model DepartmentToCreateDto
@{
    ViewData["Title"] = "Create";
}

<h1 class="col-8 my-4">Create A New Department</h1>

<form action="/Department/Create" method="post" class="row justify-content-center align-items-center col-8">
    <div asp-validation-summary="ModelOnly"></div>

    <div class="form-group">
        <label class="from-label" for="Code">Code</label>
            <input type="text" name="Code" id="Code" class="form-control"/>
            <span asp-validation-for="Code" class="text-danger"></span>

        <label class="from-label">Name</label>
        <input type="text" name="Name" id="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>

        <label class="from-label">Description</label>
            <textarea name="Description" id="Description" class="form-control" ></textarea>

        <label class="from-label">Creation Date</label>
        <input type="date" name="CreationDate" id="CreationDate" class="form-control" />
        <span asp-validation-for="CreationDate" class="text-danger"></span>

    </div>

    <div class="mt-3 ms-auto">
        <input type="submit" value="Index" class="btn btn-primary"/> |
        <a href="/Department/Index">Back To List</a>
    </div>

</form>

