@using IKEA.DAL.Common.Enums
@using IKEA.PL.ViewModels.Empolyees
@model EmployeeEditViewModel

@{
    ViewData["Title"] = "Edit";
    var Departments = ViewData["Departments"] as IEnumerable<DepartmentToReturnDto>;
}

@* 
 public string Name { get; set; } = null!;
        public string Address { get; set; } = null!;
        public string Email { get; set; } = null!;
        public string PhoneNumber { get; set; } = null!;
        public int Age { get; set; }
        public double Salary { get; set; }
        public DateOnly HiringDate { get; set; }
        public Gender Gender { get; set; }
        public EmployeeType EmployeeType { get; set; }

*@

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly"></div>
    <!-- Department Code -->
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Employee Name</label>
        <input type="text" class="form-control" asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <!-- Department Name -->
    <div class="mb-3">
        <label asp-for="Address" class="form-label">Department Name</label>
        <input type="text" class="form-control" asp-for="Address">
        <span asp-validation-for="Address" class="text-danger"></span>

    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label">Description</label>
        <input type="Email" class="form-control" asp-for="Email">
        <span asp-validation-for="Email" class="text-danger"></span>

    </div>
    <div class="mb-3">
        <label asp-for="PhoneNumber" class="form-label">PhoneNumber</label>
        <input type="tel" class="form-control" asp-for="PhoneNumber">
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>

    </div>
    <div class="mb-3">
        <label asp-for="Age" class="form-label">Age</label>
        <input type="number" class="form-control" asp-for="Age" min="0">
        <span asp-validation-for="Age" class="text-danger"></span>

    </div>
    <div class="mb-3">
        <label asp-for="Salary" class="form-label">Salary</label>
        <input type="number" name="Salary" id="Salary" class="form-control" step="0.01" min="0" placeholder="Enter salary amount" value="@Model.Salary" />
        <span asp-validation-for="Salary" class="text-danger"></span>

    </div>
    <div class="mb-3">
        <label asp-for="HiringDate" class="form-label">HiringDate</label>
        <input type="date" class="form-control" asp-for="HiringDate" value="@Model.HiringDate">
        <span asp-validation-for="HiringDate" class="text-danger"></span>

    </div>
    <div class="mb-3">
        <label class="form-label">Gender</label>
        <div>
            <input type="radio" name="Gender" id="Male" value="Male"
            @if (@Model.Gender == Gender.Male)
            {
                <text>checked</text>
            }/>
            <label for="Male">Male</label>
        </div>
        <div>
            <input type="radio" name="Gender" id="Female" value="Female" 
            @if (@Model.Gender == Gender.Female)
            {
                <text>checked</text>
            }/>
            <label for="Female">Female</label>
        </div>
        
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" for="EmployeeType">Employee Type</label>
        <select name="EmployeeType" id="EmployeeType" class="form-control" value="@Model.EmployeeType">
            <option value="">Select Employee Type</option>
            <option value="FullTime">Full-Time</option>
            <option value="PartTime">Part-Time</option>
        </select>
        <span asp-validation-for="EmployeeType" class="text-danger"></span>

        @* Department *@

        <label class="form-label" for="DepartmentId">Department</label>
        <select name="DepartmentId" id="DepartmentId" class="form-control">
            <option value="@null">Select  Department</option>
            @if (Departments != null)
            {
                @foreach (var department in Departments)
                {
                    <option value="@department.Id">@department.Name</option>
                }
            }
        </select>


    </div>
    <!-- Submit Button -->
    <input type="submit" value="Save" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-light">Back to list</a>
</form>

@section ValidationScripts {
    <partial name="_ValidationScriptsPartial">
}




