@using IKEA.BLL.CustomModels.Employees
@model IEnumerable<EmployeeToReturnDto>


@foreach (var employee in Model)
{
    <tr>
        <!-- Modal -->
        <div class="modal fade" id="exampleModal-@employee.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Delete employee</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        Are you sure?
                        <br />
                        @employee.Name
                    </div>
                    <div class="modal-footer">
                        <form asp-action="Delete" asp-route-id="@employee.Id" method="post">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="Submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <td>@employee.Name</td>
        <td>@employee.Email</td>
        <td>@employee.Age</td>
        <td>@employee.Department</td>
        <partial name="_ButtonPartial" model="@employee.Id">

    </tr>
}
