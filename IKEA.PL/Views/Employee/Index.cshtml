@using IKEA.BLL.CustomModels.Employees
@model IEnumerable<EmployeeToReturnDto>
@{
    ViewData["Title"] = "Employees";
}

<h1>Employees</h1>

<br />
<br />

<a href="/Employee/Create" class="btn btn-primary">Create A New Employee</a>


@if (Model?.Count() > 0)
{
    <table class="table table-striped table-hover mt-4">
        <thead class="text-center">
            <tr>
                <th>@Html.DisplayNameFor(D => D.Name)</th>
                <th>@Html.DisplayNameFor(D => D.Email)</th>
                <th>@Html.DisplayNameFor(D => D.Age)</th>
                <th>@Html.DisplayNameFor(D => D.Department)</th>

                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>

            </tr>
        </thead>

        <tbody class="text-center">
            @foreach(var employee in Model)
            {
                <tr>
                    <!-- Modal -->
                    <div class="modal fade" id="exampleModal-@employee.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="exampleModalLabel">Delete employee</h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    Are you sure?
                                    <br />
                                    @employee.Name
                                </div>
                                <div class="modal-footer">
                                    <form asp-action="Delete" asp-route-id="@employee.Id" method="post">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        <button type="Submit" class="btn btn-danger">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                    <td>@employee.Name</td>
                    <td>@employee.Email</td>
                    <td>@employee.Age</td>
                    <td>@employee.Department</td>
                    <partial name="_ButtonPartial" model="@employee.Id">

                </tr>
            }
        </tbody>
    </table>

    @if (!string.IsNullOrEmpty(TempData["Message"] as string))
    {
        <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
            <div id="liveToast" class="toast show" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="toast-header bg-info text-white">
                    <strong class="me-auto">Notification</strong>
                    <small>Just now</small>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
                <div class="toast-body bg-light text-dark fw-semibold p-3">
                    @TempData["Message"]
                </div>
            </div>
        </div>


    }
}
else
{
    <div class="alert alert-info mt-3">
        <h3>There are no Employees</h3>
    </div>
}

